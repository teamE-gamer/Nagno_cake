
    <div class="col-md-2 offset-1">
      <h3 class="my-3 bg-light text-center"><strong><%= @customer.last_name %><%= @customer.first_name %></strong>の会員詳細</h3>
    </div>

    <div class="col-md-2 offset-1">
      <div class="my-3 bg-light text-center"><%= flash[:notice] %></div>
    </div>

    <div class="col-md-4 offset-1">
      <table>
            <tbody>
              <tr>
                <th>氏名</th>
                <td>　<%= @customer.last_name %><%= @customer.first_name %></td>
              </tr>
              <tr>
                <th>カナ</th>
                <td>　<%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td>　<%= @customer.post_code %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td>　<%= @customer.address %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td>　<%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td>　<%= @customer.email %></td>
              </tr>
              <tr>
                <th>会員ステータス</th>
                <% if @customer.is_active? %>
                <td class="text-success">　有効</td>
                <% else %>
                <td class="text-muted">　退会</td>
                <% end %>
              </tr>
            </tbody>
      </table>
    </div>

  <div class="row">
    <div class="col-md-4 offset-1 d-flex justify-content-center">
      <div class="mx-5 my-3">
        <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-sm btn-success' %>
      </div>
      <div class="mx-5 my-">
        <%= link_to "注文履歴一覧を見る", public_orders_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
</div>