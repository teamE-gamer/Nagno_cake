<%= flash[:notice] %>
<div class='container px-5 px-mt-5'>
  <h3>ジャンル一覧・追加</h3>

  <div class="row">
  <div class="col-2">
      <%= form_with(model: @genre, url: admin_genres_path, class: 'form-group') do |f| %>
      <%= f.label :name, "ジャンル名", class: 'form-label font-weight-bold' %>
  </div>
  <div class="col-3">
    <div class="input-group mb-3">
      <%= f.text_field :name, class: 'form-control', placeholder: 'ジャンル名' %>
    </div>
  </div>
  <div class="col-2">
    <div class="input-group-append">
       <%= f.submit "新規登録", class: 'btn btn-success' %>
    </div>
  </div>
     <% end %>
  </div>
</div>

<div class='container'>
  <div class="row  ml-5">
    <div class="col-md-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="pl-5">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>