<div class='my-3 col-md-8  offset-1'>
  <table class="table-warning">
    <tbody>
      <th>配送先編集</th>
    </tbody>
  </table>
</div>

<%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>
  <div class="row">
    <div class='col-md-8 my-4 offset-1'>
      <table>
        <tbody>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td></td>
            <td><%= f.text_field :post_code, class: "post-code" %></td>
            <td colspan="2"></td>
          </tr>
            <tr>
            <th>住所</th>
            <td></td>
            <td colspan="3"><%= f.text_field :address, size: "55%", class: "address" %></td>
            </tr>
          <tr>
            <th>宛名</th>
            <td></td>
            <td><%= f.text_field :name, class: "name" %></td>
            <td colspan="2"></td>
            <td><%= f.submit "変更内容を保存",class: 'btn btn-sm btn-success' %></td>
            <td colspan="2" ></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>