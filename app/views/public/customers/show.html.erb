<h3>マイページ</h3>
<h3><strong>登録情報</strong></h3>
<%= link_to public_informaiton_edit_path, class: 'btn btn-sm btn-success' do %>
編集する
<% end %>
<table>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>

<h3><strong>配送先</strong></h3>
<%= link_to public_addresses_path, class: 'btn btn-sm btn-primary' do %>
一覧を見る
<% end %>

<h3><strong>注文履歴</strong></h3>
<%= link_to public_orders_path, class: 'btn btn-sm btn-primary' do %>
一覧を見る
<% end %>
