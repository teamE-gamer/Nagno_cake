<h3>注文履歴詳細</h3>
<div style="display: flex;">
  <div style="margin-right: 20px;">
    <table>
      <th>注文情報</th>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.to_s(:short) %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          〒<%= @order.post_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td>支払い方法</td>
        <td>
          <% if @order.payment_method == "credit_card" %>
            クレジットカード
          <% elsif @order.payment_method == "transfer" %>
            銀行振込
          <% end %>
        </td>
      </tr>
      <tr>
        <td>注文ステータス</td>
        <td> <% if @order.status == 0 %>
             入金待ち
        </td>
             <% else @order.status == 1 %>
              入金確認
            <% end %>
      </tr>
    </table>
  </div>

  <div>
    <table>
      <th>請求情報</th>
      <tr>
        <td>商品合計</td>
        <td>値</td>
      </tr>
      <tr>
        <td>配送料</td>
        <td>800</td>
      </tr>
    </table>
  </div>
</div>

<table>
  <th>注文内容</th>
  <tr>
    <td>商品</td>
    <td>単価(税込)</td>
    <td>個数</td>
    <td>小計</td>
  </tr>
  <tr>
    <td>ここは商品名が入る</td>
    <td>ここに個数が入る</td>
    <td>ここに小計が入る</td>
  </tr>
  <tr>
    <td>ここは商品名が入る</td>
    <td>ここに個数が入る</td>
    <td>ここに小計が入る</td>
  </tr>
</table>